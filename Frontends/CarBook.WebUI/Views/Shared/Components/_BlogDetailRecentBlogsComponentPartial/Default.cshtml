@model List<ResultLast3BlogsWithAuthors>

<div class="sidebar-box ftco-animate">
    <h3>Son Bloglar</h3>
    @foreach (var item in Model)
    {
    <div class="block-21 mb-4 d-flex">
        <a class="blog-img mr-4" style="background-image: url(/carbook-master/images/image_1.jpg);"></a>
        <div class="text">
            <h3 class="heading"><a href="#">Why Lead Generation is Key for Business Growth</a></h3>
            <div class="meta">
                <div><a href="#"><span class="icon-calendar"> @item.CreatedDate.ToShortDateString()</span></a></div>
                <div><a href="#"><span class="icon-person"></span> @item.AuthorName</a></div>
                <div><a href="#"><span class="icon-chat"></span> 19</a></div>
            </div>
        </div>
    </div>
    }
</div>
