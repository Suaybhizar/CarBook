@model CreateFooterAddressDto

@{
    ViewData["Title"] = "CreateFooterAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Adres Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4"> Adres alanına ait bilgileri aşağıdaki panelden girebilirsiniz. Tema Bütünlüğü bozulmaması adına sadece 1 tane veri girişi yapınız. Mevcutta veriniz varsa düzenleyiniz.Yeni Veri girişi yaparsanız önceki veriyi siliniz.</p>

                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputAdress">Ad-Soyad</label>
                                <input type="text" class="form-control" id="exampleInputAdress" asp-for="Adress" placeholder="Adres Bilgisini Giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklamayı Giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputPhone">Telefon Numarası</label>
                                <input type="tel" class="form-control" id="exampleInputPhone" asp-for="Phone" placeholder="Telofon Numarasını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">E-mail Adresi</label>
                                <input type="email" class="form-control" id="exampleInputEmail" asp-for="Email" placeholder="Mail Adresini Giriniz">
                            </div>


                            <button type="submit" class="btn btn-primary waves-effect waves-light">Adresi Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>

        </div>

    </div>
</div>








